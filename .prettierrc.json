{
  "$schema": "http://json.schemastore.org/prettierrc",
  "tabWidth": 4,
  "semi": false,
  "printWidth": 150,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "trailingComma": "none",
  "singleQuote": true,
  "overrides": [
    {
      "files": ["*.json"],
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
